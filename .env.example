# Supabase Configuration
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
DATABASE_URL=postgresql://postgres.your-project:YOUR-PASSWORD@aws-1-ap-south-1.pooler.supabase.com:5432/postgres

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
PORT=3000
HOSTNAME=0.0.0.0

# Razorpay Configuration
# Get these from: https://dashboard.razorpay.com/app/keys
# Use rzp_test_* keys for test mode (checkout shows test card hint: 4111 1111 1111 1111)
RAZORPAY_KEY_ID=rzp_test_xxx
RAZORPAY_KEY_SECRET=your-secret
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_xxx
RAZORPAY_WEBHOOK_SECRET=whsec_xxx
# Optional: set to 'true' to skip Razorpay and complete orders immediately (dev only)
# NEXT_PUBLIC_BYPASS_PAYMENT=false

# Google Maps (optional - enables address search and reverse geocoding)
# Without these, users can still add addresses via manual entry
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=
GOOGLE_MAPS_API_KEY=

# Feature Flags
ENABLE_AUTH=true
ENABLE_RATE_LIMITING=false
